{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "1.1",

  "default_locale": "en",
  "description": "__MSG_extDesc__",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": "icon_16.png",
    "default_title": "__MSG_buttonTip__"
  },

  "commands": {
    "tweet": {
      "suggested_key": {
        "default": "Ctrl+T",
        "mac": "MacCtrl+T"
      },
      "description": "tweet current tab"
    }
  },

  "background": {
    "persistent": false,
    "scripts": [ "background.js" ]
  },

  "permissions": [
    "tabs", "commands"
  ]
}
